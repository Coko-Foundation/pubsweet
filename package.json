{
  "name": "@pubsweet/db-manager",
  "version": "0.0.2",
  "description": "Provides database management utilities to Pubsweet apps.",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --runInBand --no-cache",
    "lint": "eslint src test",
    "test:ci": "gitlab-runner exec docker --docker-image=pubsweet/pubsweet-test-base test:node",
    "vuln-test": "nsp check --output checkstyle"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.coko.foundation:yld/db-manager.git"
  },
  "keywords": [
    "pubsweet",
    "database"
  ],
  "engines": {
    "node": ">=7.9.0",
    "npm": ">=3.0.0"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "modulePaths": [
      "<rootDir>/node_modules"
    ],
    "testEnvironment": "node",
    "verbose": true
  },
  "author": "Samuel Galson",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.1.0",
    "nsp": "^2.8.0"
  },
  "dependencies": {
    "@pubsweet/logger": "0.0.1",
    "fs-extra": "^4.0.2",
    "joi": "^11.0.2",
    "pouchdb": "^6.3.4",
    "pubsweet-server": "git+https://gitlab.coko.foundation/yld/pubsweet-server.git#feat/recreate-db"
  }
}
