{
  "name": "pubsweet-client",
  "version": "1.0.0-alpha.3",
  "main": "src/index.js",
  "scripts": {
    "compile": "babel --presets es2015,react -d lib/ src/",
    "lint": "eslint src test",
    "pretest": "npm run lint",
    "pretestci": "npm run pretest",
    "test": "./test/helpers/runtestcmd jest --runInBand --no-watchman --no-cache --verbose --forceExit",
    "testdocker": "./test/helpers/runtestcmd \"jest --runInBand --no-watchman --no-cache --verbose --forceExit\"",
    "testci": "gitlab-ci-multi-runner exec docker --docker-image=pubsweet/pubsweet-test-base test"
  },
  "engines": {
    "node": ">=7.7.0",
    "npm": ">=3.0.0"
  },
  "author": "Collaborative Knowledge Foundation",
  "license": "MIT",
  "dependencies": {
    "authsome": "0.0.4",
    "config": "^1.21.0",
    "event-source-polyfill": "^0.0.9",
    "global": "^4.3.1",
    "isomorphic-fetch": "^2.1.1",
    "lodash": "^4.0.0",
    "prop-types": "^15.5.8",
    "pubsweet-component-login": "^0.2.4",
    "react": "^15.4.4",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.5",
    "react-router-redux": "^4.0.5",
    "redux": "^3.6.0",
    "redux-form": "^7.0.3",
    "redux-logger": "^3.0.1",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "isomorphic-form-data": "^1.0.0",
    "jest": "^20.0.4",
    "node-localstorage": "^1.3.0",
    "pubsweet": "^1.0.0-alpha.4"
  },
  "peerDependencies": {
    "pubsweet-server": "^1.0.0-alpha.2"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "db",
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "context",
      "describe",
      "it",
      "setup",
      "specify",
      "suite",
      "suiteSetup",
      "suiteTeardown",
      "teardown",
      "test",
      "xcontext",
      "xdescribe",
      "xit",
      "xspecify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.coko.foundation/pubsweet/pubsweet-client"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "/test/[^/]*\\.js$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/(actions|reducers)/*.js"
    ],
    "modulePaths": [
      "<rootDir>/node_modules",
      "<rootDir>/node_modules/pubsweet",
      "./node_modules",
      "."
    ],
    "verbose": true,
    "globals": {
      "CONFIG": {
        "pubsweet-server": {
          "API_ENDPOINT": "http://localhost:3000/api"
        }
      },
      "window": {}
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/?!(pubsweet)",
      "<rootDir>/test",
      "<rootDir>/node_modules/chai"
    ]
  }
}
