{
  "name": "pubsweet",
  "version": "1.0.0-alpha.1",
  "description": "Pubsweet command-line interface, app generator and manager",
  "bin": "./bin/pubsweet.js",
  "scripts": {
    "lint": "eslint bin src cli test",
    "pretest": "npm run lint",
    "pretestci": "npm run pretest",
    "test": "NODE_ENV=test jest --runInBand --no-cache",
    "testonly": "NODE_ENV=test jest --runInBand --no-cache",
    "testdocker": "NODE_ENV=test jest --color --expand --verbose --runInBand --no-watchman --no-cache",
    "testci": "gitlab-ci-multi-runner exec docker --docker-image=pubsweet/pubsweet-test-base test",
    "testdebug": "node --inspect-brk ./node_modules/.bin/jest --debug --runInBand --no-watchman --no-cache --env jest-environment-node-debug",
    "watchtest": "WATCH_TESTS=true NODE_ENV=test jest"
  },
  "keywords": [
    "pubsweet",
    "cli"
  ],
  "author": "Collaborative Knowledge Foundation",
  "license": "MIT",
  "dependencies": {
    "app-module-path": "^2.2.0",
    "authsome": "0.0.4",
    "child-process-promise": "^2.2.1",
    "chokidar": "^1.6.1",
    "colors": "^1.1.2",
    "commander": "^2.9.0",
    "dotenv": "^2.0.0",
    "forever-monitor": "^1.7.0",
    "fs-extra": "^3.0.0",
    "git-wrapper2-promise": "^0.2.9",
    "html-webpack-plugin": "^2.24.0",
    "joi": "^10.4.1",
    "pouchdb": "^6.2.0",
    "prompt": "flatiron/prompt#1c95d1d8d333b5fbc13fa5f0619f3dcf0d514f87",
    "temp": "^0.8.3",
    "tmp": "0.0.29",
    "uuid": "^3.0.1",
    "webpack": "^2.3.2",
    "winston": "^2.2.0",
    "yarn": "^0.24.6"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.coko.foundation/pubsweet/pubsweet-cli"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "clear-require": "^2.0.0",
    "eslint": "^3.19.0",
    "express": "^4.15.3",
    "express-pouchdb": "^2.3.7",
    "jest": "^20.0.4",
    "nightmare": "^2.9.1",
    "nightmare-wait-for-url": "0.0.2",
    "simple-get": "^2.5.1",
    "standard": "^10.0.1"
  },
  "jest": {
    "testMatch": [
      "**/test/*.js",
      "**/test/cli/*.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "cli/*.js"
    ],
    "modulePaths": [
      "<rootDir>/node_modules"
    ],
    "testEnvironment": "node",
    "unmockedModulePathPatterns": [
      "/src/models"
    ],
    "verbose": true
  }
}
