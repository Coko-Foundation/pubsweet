{
  "name": "pubsweet",
  "version": "1.0.0-alpha.4",
  "description": "Pubsweet command-line interface, app generator and manager",
  "bin": "./bin/pubsweet.js",
  "scripts": {
    "lint": "eslint bin src cli test",
    "pretest": "yarn link",
    "test": "NODE_ENV=test jest --runInBand --no-cache",
    "test:mocked": "NODE_ENV=test jest ./test/cli",
    "vuln-test": "nsp check --output checkstyle",
    "test:ci": "gitlab-ci-multi-runner exec docker --docker-image=pubsweet/pubsweet-test-base test:node",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --debug --runInBand --no-watchman --no-cache --env jest-environment-node-debug"
  },
  "keywords": [
    "pubsweet",
    "cli"
  ],
  "author": "Collaborative Knowledge Foundation",
  "license": "MIT",
  "dependencies": {
    "@pubsweet/db-manager": "git+https://gitlab.coko.foundation/yld/db-manager.git",
    "@pubsweet/logger": "^0.0.1",
    "bluebird": "^3.5.0",
    "colors": "^1.1.2",
    "commander": "^2.9.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "forever-monitor": "^1.7.0",
    "fs-extra": "^3.0.0",
    "inflection": "^1.12.0",
    "joi": "^10.4.1",
    "prompt": "flatiron/prompt#1c95d1d8d333b5fbc13fa5f0619f3dcf0d514f87",
    "uuid": "^3.0.1",
    "webpack": "^2.3.2",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.19.1"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.coko.foundation/pubsweet/pubsweet-cli"
  },
  "devDependencies": {
    "@pubsweet/starter": "git+https://gitlab.coko.foundation/yld/pubsweet-starter.git#cli-refactor",
    "eslint": "^4.8.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.0.0",
    "nsp": "^2.8.1"
  },
  "jest": {
    "testMatch": [
      "**/test/*.js",
      "**/test/cli/*.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "cli/*.js"
    ],
    "modulePaths": [
      "<rootDir>/node_modules"
    ],
    "testEnvironment": "node",
    "unmockedModulePathPatterns": [
      "/src/models"
    ],
    "verbose": true
  }
}
