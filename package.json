{
  "name": "pubsweet-client",
  "version": "0.9.0",
  "main": "src/index.js",
  "scripts": {
    "compile": "babel --presets es2015,react -d lib/ src/",
    "lint": "eslint src test",
    "pretest": "npm run lint",
    "pretestci": "npm run pretest",
    "test": "./test/helpers/runtestcmd jest --runInBand --no-watchman --no-cache --verbose --forceExit",
    "testdocker": "./test/helpers/runtestcmd \"jest --runInBand --no-watchman --no-cache --verbose --forceExit\"",
    "testci": "gitlab-ci-multi-runner exec docker --docker-image=pubsweet/pubsweet-test-base test"
  },
  "engines": {
    "node": ">=7.7.0",
    "npm": ">=3.0.0"
  },
  "author": "Collaborative Knowledge Foundation",
  "license": "MIT",
  "dependencies": {
    "authsome": "0.0.4",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "bootstrap-sass": "^3.3.7",
    "config": "^1.21.0",
    "debug": "~2.2.0",
    "event-source-polyfill": "^0.0.9",
    "global": "^4.3.1",
    "history": "^1.13.1",
    "http-status-codes": "^1.0.6",
    "isomorphic-fetch": "^2.1.1",
    "jsonwebtoken": "^7.1.7",
    "lodash": "^4.0.0",
    "minimatch": "^3.0.0",
    "minimist": "^1.2.0",
    "morgan": "~1.7.0",
    "multer": "^1.1.0",
    "react": "^15.3.2",
    "react-bootstrap": "^0.30.3",
    "react-dom": "^15.3.2",
    "react-helmet": "^3.1.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-redux": "^5.0.2",
    "react-router": "^2.6.1",
    "react-router-bootstrap": "^0.23.1",
    "react-router-redux": "^4.0.5",
    "react-select": "^1.0.0-rc.1",
    "redux": "^3.6.0",
    "redux-devtools": "^3.0.0-beta-3",
    "redux-devtools-dock-monitor": "^1.0.0-beta-3",
    "redux-devtools-log-monitor": "^1.0.0-beta-3",
    "redux-logger": "^2.0.2",
    "redux-thunk": "^0.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "fs-extra": "^2.1.2",
    "isomorphic-form-data": "^1.0.0",
    "jest": "^19.0.1",
    "node-localstorage": "^1.3.0",
    "pubsweet": "^0.2.0",
    "pubsweet-component-login": "^0.2.2",
    "pubsweet-server": "^0.8.0",
    "standard": "^10.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.coko.foundation/pubsweet/pubsweet-client"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "/test/[^/]*\\.js$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/(actions|reducers)/*.js"
    ],
    "modulePaths": [
      "<rootDir>/node_modules",
      "<rootDir>/node_modules/pubsweet",
      "./node_modules",
      "."
    ],
    "verbose": true,
    "globals": {
      "CONFIG": {
        "pubsweet-server": {
          "API_ENDPOINT": "http://localhost:3000/api"
        }
      },
      "window": {}
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/?!(pubsweet)",
      "<rootDir>/test",
      "<rootDir>/node_modules/chai"
    ]
  }
}
