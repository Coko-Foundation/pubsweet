{
  "name": "@pubsweet/db-manager",
  "version": "1.0.8",
  "description": "Provides database management utilities to Pubsweet apps.",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "vuln-test": "nsp check --output checkstyle"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.coko.foundation/pubsweet/pubsweet"
  },
  "keywords": [
    "pubsweet",
    "database"
  ],
  "engines": {
    "node": ">=7.9.0",
    "npm": ">=3.0.0"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/jest-setup.js",
    "testEnvironment": "jest-environment-db",
    "verbose": true
  },
  "author": "Samuel Galson",
  "license": "MIT",
  "devDependencies": {
    "jest": "^22.1.4",
    "jest-environment-db": "^1.0.0",
    "nsp": "^2.8.0"
  },
  "dependencies": {
    "@pubsweet/logger": "^0.2.2",
    "fs-extra": "^4.0.2",
    "isomorphic-fetch": "^2.2.1",
    "joi": "^13.1.0",
    "pg": "^7.4.1",
    "pubsweet-server": "^5.0.0"
  }
}
