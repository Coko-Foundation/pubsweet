{
  "name": "@pubsweet/db-manager",
  "version": "0.0.16",
  "description": "Provides database management utilities to Pubsweet apps.",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src test",
    "test:ci":
      "gitlab-runner exec docker --docker-image=pubsweet/pubsweet-test-base test:node",
    "vuln-test": "nsp check --output checkstyle"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.coko.foundation/pubsweet/pubsweet"
  },
  "keywords": ["pubsweet", "database"],
  "engines": {
    "node": ">=7.9.0",
    "npm": ">=3.0.0"
  },
  "jest": {
    "testMatch": ["**/test/**/*.test.js"],
    "collectCoverage": true,
    "collectCoverageFrom": ["src/**/*.js"],
    "setupTestFrameworkScriptFile": "<rootDir>/test/jest-setup.js",
    "testEnvironment": "node",
    "verbose": true
  },
  "author": "Samuel Galson",
  "license": "MIT",
  "devDependencies": {
    "jest": "^22.1.4",
    "nsp": "^2.8.0"
  },
  "dependencies": {
    "@pubsweet/logger": "^0.2.1",
    "fs-extra": "^4.0.2",
    "isomorphic-fetch": "^2.2.1",
    "joi": "^13.1.0",
    "pouchdb": "^6.3.4",
    "pubsweet-server": "^1.1.0"
  }
}
